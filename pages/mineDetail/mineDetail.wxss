/* pages/mineDetail/mineDetail.wxss */
@import "../../comm/style/loading.wxss";

.wrap{
  border: 0px solid #eee;
  background: #ECECEC
}

.item{
  background: #fff;
  border-bottom:0.5px solid #bfbfbf;
  margin-left:10px;
  margin-right:10px;
  padding-left: 10px;
  padding-top:8px;
  padding-bottom:8px;
}

.icon{
  width:35px;height:35px;float:right;margin-top:7px;margin-right:0px;
  margin-top:-38px;
}

.shadow{
  background: #999999;
  opacity: 0.75;
}

.wrapWishes{
  margin:10px;
  background:#fff;
  padding:8px;
  border-radius: 3px;
}

.tag{
    display: inline-block;
    padding: 6px 13px;
    font-size: 14px;
    margin: 2px 0px;
    background: #F4F4F4;
    color: #10161A;
    border-radius: 3px;
}

input{
    height: 40px;
    width: 92%;
    border: none;
    border-radius: 3px;
    font-size: 13px;
    background: #F4F4F4;
    border-bottom: 3px solid #EEE;
    color: #354052;
    padding: 0px 10px;
    opacity: 0.75;
    margin-top: 10px;
    -webkit-transition: 0.2s border-color, 0.2s opacity;
    transition: 0.2s border-color, 0.2s opacity;
}
textarea{
    padding: 5px 10px;
    border-radius: 3px;
    min-height: 100px;
    resize: vertical;
    height: 40px;
    width: 92%;
    border: none;
    margin-top: 10px;
    font-size: 13px;
    background: #F4F4F4;
    border-bottom: 3px solid #EEE;
    color: #354052;
    opacity: 0.75;
    -webkit-transition: 0.2s border-color, 0.2s opacity;
    transition: 0.2s border-color, 0.2s opacity;
}

.shadow2{
  background: #6195FF;
  color:#fff;
}

.wrap4code{
  height:275px;
  margin-left:2%;
  margin-right:2%;
  text-align: center;
  background:#fff;
  padding:8px;
  border-radius: 3px;
}