<!--pages/detail.wxml-->
<view id="loading" class="loading-wrap" style='display:{{isDisplay}}'>
  <view class="loader">
    <view class="la-fire la-3x" style='color:#6195FF'>
      <view></view>
      <view></view>
      <view></view>
    </view>
    <view class="loaderTxt">加载数据中...</view>
  </view>
</view>
<view style='position:absolute;z-index:99;top:-27px;left:15px;'>
  <image mode='aspectFit' style='width:95px;'  src='../../dist/images/play.png'></image>
</view>
<view >
  <view style=''>
    <image mode='aspectFit' style='float:left;margin-left:8px;width:115px;height:165px;margin-top:8px' src="{{imgSrc}}"></image>
  </view>
  <view style='margin-left:130px;font-size:23px;font-weight:bold;margin-top:3px'>{{name}}</view>
  <view style='margin-left:130px;;font-size:13px;font-weight:normal;color:#10161A'>导演:{{director}}</view>
  <view style='margin-left:130px;;font-size:13px;font-weight:normal;color:#10161A'>主演:{{actor}}</view>
  <view style='width:100%;height:28px;background:#6195FF;opacity:0.75;margin-left:51px'></view>
  <view style='margin-left:130px;;font-size:13px;font-weight:normal;color:#10161A'>发行日期:{{publish}}</view>
  <view style='margin-left:130px;font-size:13px;font-weight:normal;color:#10161A'>播放时长:{{length}}</view>
  <view style='font-size:13px;font-weight:normal;color:#868F9B;color:#10161A;padding-left:130px'>剧情简介:</view>
  <view style='margin-left:8px;font-size:13px;font-weight:normal;color:#868F9B;padding-left:0px;padding-right:8px;text-indent:7px;'>{{description}}</view>
</view>
