<view class="table" style='height:{{height}}px;border:0px solid red;'>
  <view class="tr" bindtouchstart='changeColor' bindtouchend='changeColor'  id='1' style='height:{{height/4}}px;text-align:center;'>
    <image style='width:100%;height:{{height/4}}px;z-index:-99;position:absolute;top:0px;left:0px;'src='../../dist/images/b1.jpg'/>
    <view style='background:#6195FF;opacity:{{opacity01}};width:100%;height:100px;z-index:-98;position:absolute;top:{{height/8-50}}px;'/>
    <view style='color:#fff;width:100%;height:100px;z-index:-97;position:absolute;border:0px solid red;top:{{height/8-50}}px'>
      <view style='font-size:23px;font-weight:bold;margin-top:20px'>电影</view>
      <view style='height:2px;width:115px;background:#fff;margin:0 auto'/>
      <view style='font-size:13px'>Movie</view>
    </view>
  </view>
  <view class="tr" bindtouchstart='changeColor' bindtouchend='changeColor' id='2' style='height:{{height/4}}px;text-align:center;'>
