      <view style='font-size:23px;font-weight:bold;margin-top:20px'>电视剧</view>
      <view style='height:2px;width:115px;background:#fff;margin:0 auto'/>
      <view style='font-size:13px'>Series</view>
    </view>
  </view>

  <view class="tr" bindtouchstart='changeColor' bindtouchend='changeColor' id='3' style='height:{{height/4}}px;text-align:center;'>
