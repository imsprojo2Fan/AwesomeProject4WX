/* pages/search/search.wxss */
@import "../../comm/style/loading.wxss";
.search-hd {
  width: 100%;
  height: 140px;
  background-color: #fff;
  border-bottom: 0px solid #f8f8f8;
}
.search-area {
  box-sizing: border-box;
  position: relative;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 45px; 
}

.search-type {
  position: absolute;
  z-index: 11;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size:13px;
  text-align: center;
  border-right: 1px solid #eee;
}

.search-txt {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  font-size:13px;
  padding-left: 140rpx;
  padding-right: 20rpx;
  border-radius: 10rpx;
  border: 1px solid #eee;
  font-family: "微软雅黑";
}

.search-btn {
  position: absolute;
  z-index: 11;
  top: 0;
  right: 0;
  height: 80rpx;
  width: 120rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
}

.search-btn::after{
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
}

.search-keyword {
  padding: 30rpx;
}

.search-keyword-title {
  padding-left: 20rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  border-left: 10rpx solid #6195FF;
}

.search-keyword-item {
  display: inline-block;
  padding: 6px 17px;
  border: 0px solid #ccc;
  border-radius: 8rpx;
  font-size:13px;
  background-color: #fbfbfb;
  margin: 0 10rpx 10rpx 0;
  color: #555;
}

.img{
  height:19vh;
  width:25vw;
  float:left;
  padding: 9px;
  border: 0px solid red;
}
.shadow01{
  background-color: #6195FF;
  color:#fff;
  opacity:0.75;
}

.shadow02{
  background-color: #999999;
  opacity:0.95;
}